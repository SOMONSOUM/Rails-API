<p id="notice"><%= notice %></p>

<p class="text-center">
  <%= link_to image_tag(@article.header_image.variant(resize: "300x300")), @article.header_image %>
</p>
<p class="text-center">
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p class="text-center">
  <strong>Body:</strong>
  <div class="text-center">
    <%= raw @article.body %>
  </div>
</p>

<div>
  <% @article.images.each do |image| %>
    <%= link_to image_tag(image.variant(resize: "300x300")), image %>
  <% end %>
</div>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
